<Page x:Class="hciProjekat.SoftverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hciProjekat"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SoftverPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Height="35" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Button Content="Ucionice" Click="UcioniceBtnClick"></Button>
            <Button Content="Predmeti" Margin="10,0,0,0" Click="PredmetiBtnClick"></Button>
            <Button Content="Smjerovi" Margin="10,0,0,0" Click="SmjeroviBtnClick"></Button>
            <Button Content="Softver" Margin="10,0,0,0" IsEnabled="False"></Button>
        </StackPanel>
        <DataGrid x:Name="dgrSoftver" Margin="0,40,0,0" Height="300" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" IsReadOnly="True" ItemsSource="{Binding Path=Softveri}"/>
        <Grid Grid.Column="0" Grid.Row="1" Margin="0,10,0,0" DataContext="{Binding ElementName=dgrSoftver,Path=SelectedItem}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0">Oznaka:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="1">Naziv:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="2">Proizvodjac:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="3">Sajt:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="4">Godina izdavanja:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="5">Cijena:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="6">Operativni sistem:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="7">Opis:</TextBlock>
            
            
            <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Path=Id}"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=Naziv}"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=Proizvodjac}"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=Sajt}"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Path=GodinaIzdavanja}"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding Path=Cijena}"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="6" Text="{Binding Path=OperativniSistem}"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="7" Text="{Binding Path=Opis}"></TextBox>
        </Grid>
    </Grid>
</Page>
